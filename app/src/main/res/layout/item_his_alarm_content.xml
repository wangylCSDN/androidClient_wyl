<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:background="@drawable/corners_bg_list">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginTop="7dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备名称："
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/item_his_alarm_devicename_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="33333"
                        android:singleLine="true"
                        android:layout_marginLeft="8dp"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:ems="20"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="报警名称："
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/item_his_alarm_alarminfo_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="33333"
                        android:singleLine="true"
                        android:layout_marginLeft="8dp"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:ems="20"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="报警等级："
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/item_his_alarm_alarmtype_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="33333"
                        android:singleLine="true"
                        android:layout_marginLeft="8dp"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:ems="20"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="报警开始时间："
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/item_his_alarm_start_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="33333"
                        android:singleLine="true"
                        android:layout_marginLeft="8dp"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:ems="40"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginTop="8dp">

                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="报警原因："
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/item_his_alarm_reason_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:ems="40"
                        android:singleLine="true"
                        android:text="33333"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="报警解决办法："
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/item_his_alarm_solve_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="33333"
                        android:singleLine="true"
                        android:layout_marginLeft="8dp"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:ems="40"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.95"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="报警结束时间："
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/item_his_alarm_end_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="33333"
                        android:singleLine="true"
                        android:layout_marginLeft="8dp"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:ems="40"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>