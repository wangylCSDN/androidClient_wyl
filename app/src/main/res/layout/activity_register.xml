        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            >
            <Space
                android:layout_width="30dp"
                android:id="@+id/register_space"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"/>
            <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="确定"
            android:id="@+id/register_ok_btn"
            android:textSize="25sp"
            android:background="#FF72CAE1"
            android:layout_toLeftOf="@id/register_space"
            />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="取消"
                android:id="@+id/register_cancel_btn"
                android:textSize="25sp"
                android:background="#FF72CAE1"
                android:layout_toRightOf="@id/register_space"
                />

        </RelativeLayout>


</LinearLayout>

