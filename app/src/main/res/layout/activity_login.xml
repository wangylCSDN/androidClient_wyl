<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bp2"
    tools:context="com.example.wqter.androidclient_mypart.LoginActivity">
    <LinearLayout
        android:id="@+id/loginPanel"
        android:layout_width="400dp"
        android:layout_height="380dp"
        android:orientation="vertical"
        android:background="@drawable/background_login_div"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:focusable="true"
        android:focusableInTouchMode="true" >
        <EditText
            android:id="@+id/login_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="45dp"
            android:singleLine="true"
            android:background="@drawable/qq_edit_login"
            android:hint="请输入您的用户id或用户名"
            android:ems="20"
            android:textSize="20sp"
            android:gravity="center_horizontal|center_vertical"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:drawableLeft="@android:drawable/ic_menu_myplaces"
            >
            <!--<requestFocus />-->
        </EditText>
        <EditText
            android:id="@+id/login_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/qq_edit_login"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock"
            android:ems="10"
            android:textSize="20sp"
            android:hint="请输入您的密码"
            android:gravity="center_horizontal|center_vertical"
            android:password="true"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
           <Space
               android:layout_width="10dp"
               android:id="@+id/login_space"
               android:layout_height="match_parent"
               android:layout_centerInParent="true"/>
            <CheckBox
                android:id="@+id/remember"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="记住密码"
                android:checked="false"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_toLeftOf="@id/login_space"
                android:layout_marginRight="5dp"/>
            <CheckBox
                android:id="@+id/auto_login"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="自动登陆"
                android:textSize="18sp"
                android:checked="false"
                android:textColor="#000000"
                android:layout_toRightOf="@id/login_space"
                android:layout_marginLeft="5dp"/>

        </RelativeLayout>
        <com.unstoppable.submitbuttonview.SubmitButton
            android:layout_width="212dp"
            android:layout_height="50dp"
            android:id="@+id/login_bt_sb"
            android:layout_gravity="center_horizontal"
            app:buttonText="登录"
            app:buttonColor="#103020"
            app:buttonTextSize="25dp"
            app:failedColor="@color/colorPrimaryDark"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="没有账号？"
                android:textColor="#000000"
                android:textSize="15sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:background="#00000000"
                android:textSize="18sp"
                android:textColor="@color/color_even"
                android:id="@+id/register_button"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
